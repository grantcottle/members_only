<%= simple_form_for post do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.input :body, placeholder: 'Say something secret!' %>
  <%= form.input :privacy, collection: Hash[Post.privacies.map {|k,v| [k.split('_').first.capitalize, k]}] %>
  <div class="actions">
    <%= form.submit "Create Message", class: 'btn btn-primary' %>
  </div>
<% end %>
